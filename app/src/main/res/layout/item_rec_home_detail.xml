<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">
    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/item_home_pic_iv"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:scaleType="fitCenter"
        app:riv_corner_radius="20dp"
        app:riv_oval="true"
        />

    <TextView
        android:id="@+id/item_home_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_alignTop="@+id/item_home_pic_iv"
        android:layout_toRightOf="@+id/item_home_pic_iv"
        android:layout_toEndOf="@+id/item_home_pic_iv"
        android:text="标题呀！标题呀！标题呀！标题呀！标题呀！标题呀！"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/item_home_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/item_home_title_tv"
        android:layout_alignLeft="@+id/item_home_title_tv"
        android:layout_below="@+id/item_home_title_tv"
        android:text="这是内容呀！这是内容呀！这是内容呀！"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:textColor="@color/black"
        />


</RelativeLayout>